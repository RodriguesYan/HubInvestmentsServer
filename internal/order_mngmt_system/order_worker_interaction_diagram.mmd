graph TD
    subgraph "Complete Order Processing Flow"
        subgraph "Client Layer"
            CLIENT["ğŸ“± Client<br/>Web/Mobile App<br/>Submits order"]
        end
        
        subgraph "API Layer"
            HTTP["ğŸŒ HTTP Handler<br/>REST API endpoint<br/>Authentication & validation"]
        end
        
        subgraph "Business Layer"
            SUC["ğŸ“ SubmitOrderUseCase<br/>Order validation<br/>Save to DB<br/>Publish to queue"]
            POU["âš¡ ProcessOrderUseCase<br/>Order execution<br/>Price validation<br/>Status updates"]
        end
        
        subgraph "Messaging Layer"
            PROD["ğŸ“¤ OrderProducer<br/>Publishes to RabbitMQ<br/>Message serialization"]
            MQ["ğŸ“¬ RabbitMQ Queues<br/>Order queue<br/>Retry queue<br/>Dead letter queue"]
            CONS["ğŸ“¨ OrderConsumer<br/>Consumes messages<br/>Message routing"]
        end
        
        subgraph "Worker Layer"
